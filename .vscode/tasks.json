{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc générer le fichier actif",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${workspaceFolder}/out/${fileBasenameNoExtension}",
                "-lm",
                "-lpthread",
                "-std=c99",
                "-Wall",
                "-Wextra"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Tâche générée par le débogueur."
        },
        {
            "label": "build",
            "command": "${workspaceFolder}/make.sh",
            "args": [
                "build",
                "all"
            ]
        },
    ],
    "version": "2.0.0"
}